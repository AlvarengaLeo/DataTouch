@* ══════════════════════════════════════════════════════════════════════════════
   IconRegistry Component - Centralized icon system for DataTouch CRM
   
   Provides consistent, accessible SVG icons across all modules:
   - Brand logos (WhatsApp, LinkedIn, Instagram, etc.)
   - Action pictograms (Call, Email, Calendar, etc.)
   - Event type icons (Contact saved, Form submitted, etc.)
   
   Usage: <IconRegistry Type="whatsapp" Size="20" />
   ══════════════════════════════════════════════════════════════════════════════ *@

@code {
    /// <summary>
    /// Icon type - matches LinkType, EventType, or action name (case-insensitive)
    /// </summary>
    [Parameter] public string Type { get; set; } = "link";
    
    /// <summary>
    /// Icon size in pixels (default: 20)
    /// </summary>
    [Parameter] public int Size { get; set; } = 20;
    
    /// <summary>
    /// Optional CSS class for additional styling
    /// </summary>
    [Parameter] public string? Class { get; set; }
    
    /// <summary>
    /// Whether to show the icon in a circular badge container
    /// </summary>
    [Parameter] public bool ShowBadge { get; set; } = false;
    
    /// <summary>
    /// Badge background color (CSS class name)
    /// </summary>
    [Parameter] public string BadgeClass { get; set; } = "badge-default";

    private string NormalizedType => Type?.ToLowerInvariant()?.Trim() ?? "link";
    
    private string AriaLabel => GetAriaLabel(NormalizedType);
    
    private static string GetAriaLabel(string type) => type switch
    {
        "whatsapp" => "WhatsApp",
        "linkedin" => "LinkedIn",
        "instagram" => "Instagram",
        "facebook" => "Facebook",
        "twitter" or "x" => "X (Twitter)",
        "youtube" => "YouTube",
        "tiktok" => "TikTok",
        "telegram" => "Telegram",
        "email" or "gmail" => "Email",
        "call" or "phone" => "Phone call",
        "calendar" or "meeting" or "booking" => "Calendar/Meeting",
        "portfolio" or "briefcase" => "Portfolio",
        "website" or "web" or "globe" => "Website",
        "contact_save" or "contact_saved" or "user_check" => "Contact saved",
        "form_submit" or "form_submitted" or "form" => "Form submitted",
        "qr_scan" or "qr" => "QR code scan",
        "nfc_tap" or "nfc" => "NFC tap",
        "card_open" or "card_opened" or "page_view" => "Card opened",
        "lead" or "lead_created" => "Lead created",
        "time" or "clock" => "Time",
        "inactive" or "card_inactive" => "Inactive card",
        "link_click" or "cta_click" => "Link click",
        "maps" or "location" or "directions" => "Location",
        _ => "Link"
    };
}

@if (ShowBadge)
{
    <div class="icon-badge @BadgeClass" style="width: @(Size + 16)px; height: @(Size + 16)px;" 
         role="img" aria-label="@AriaLabel">
        @RenderIcon()
    </div>
}
else
{
    <span class="icon-wrapper @Class" role="img" aria-label="@AriaLabel">
        @RenderIcon()
    </span>
}

